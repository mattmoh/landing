---
import CallToAction from './CallToAction.astro';
import Icon from './Icon.astro';
---

<aside>
	<h2>Interested in working together?</h2>
	<div>
		<CallToAction href="mailto:me@mattmoh.com">
			Send Me an Email
			<Icon icon="paper-plane-tilt" size="1.2em" />
		</CallToAction>
		<CallToAction href="/Mohrenweiser_2409.pdf" target="_blank">
			Print My Resume
			<Icon icon="resume" size="1.2em" />
		</CallToAction>
	</div>
</aside>

<style>
	aside {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 3rem;
		border-top: 1px solid var(--gray-800);
		border-bottom: 1px solid var(--gray-800);
		padding: 4rem 1.5rem;
		background-color: var(--gray-999_40);
		box-shadow: var(--shadow-sm);
	}

	h2 {
		font-size: var(--text-xl);
		text-align: center;
		max-width: 15ch;
	}

	div {
		display: flex;
		flex-direction: column; /* Stack CTAs on top of each other */
		gap: 1.5rem; /* Gap between CTAs */
	}

	@media (min-width: 50em) {
		aside {
			padding: 6rem;
			flex-direction: row;
			flex-wrap: wrap;
			justify-content: space-between;
		}

		h2 {
			font-size: var(--text-3xl);
			text-align: left;
		}

		div {
			flex-direction: column; /* Keep CTAs stacked on larger screens */
			gap: 2rem; /* Adjust gap for larger screens */
		}
	}
</style>
